{
  "name": "ai-novelist",
  "version": "1.0.0",
  "description": "AI Novelist Application",
  "main": "main.js",
  "private": true,
  "workspaces": [
    "frontend/react-app"
  ],
  "scripts": {
    "start": "npm run build:backend && electron .",
    "start:react": "cd frontend/react-app && npm start",
    "start:full": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start\"",
    "start:prod": "npm run build:prod && npm run launch:prod",
    "launch:prod": "electron . --no-dev-tools",
    "build:prod": "npm run build:backend && npm run build:react",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:react": "npm run build --workspace=frontend/react-app",
    "clean:novel-data": "node -e \"require('fs').rmSync('novel', { recursive: true, force: true }); require('fs').mkdirSync('novel', { recursive: true });\"",
    "pack": "npm run clean:novel-data && npm run build:backend && npm run build:react && electron-builder --dir",
    "dist": "npm run clean:novel-data && npm run build:backend && npm run build:react && electron-builder",
    "build": "npm run build --workspace=frontend/react-app",
    "lint": "eslint .",
    "init:dev": "node init-dev-data.js"
  },
  "keywords": [],
  "author": "ai-novelist",
  "license": "MIT",
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.8",
    "@langchain/core": "^0.3.72",
    "@langchain/community": "^0.3.53",
    "@langchain/textsplitters": "^0.1.0",
    "@vscode/ripgrep": "^1.15.14",
    "axios": "^1.9.0",
    "chromadb": "^3.0.14",
    "concurrently": "^9.1.2",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.1.5",
    "electron-store": "^10.0.1",
    "fastest-levenshtein": "^1.0.16",
    "fzf": "^0.5.2",
    "hnswlib-node": "^3.0.0",
    "https-proxy-agent": "^7.0.6",
    "langchain": "^0.3.31",
    "lodash": "^4.17.21",
    "mammoth": "^1.10.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.0.0",
    "p-wait-for": "^5.0.2",
    "pdf-parse": "^1.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "simple-git": "^3.28.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.57.1",
    "license-checker": "^25.0.1",
    "wait-on": "^8.0.3"
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "build": {
    "appId": "com.ainovelist.app",
    "productName": "测试",
    "directories": {
      "output": "dist"
    },
    "asar": false,
    "extraMetadata": {
      "main": "main.js"
    },
    "files": [
      "**/*",
      "!frontend/react-app/node_modules",
      "!dist",
      "!backend/data",
      "!novel/**/*",
      "chroma_env/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/@vscode/ripgrep/bin/",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "npmRebuild": false,
    "nodeGypRebuild": false
  }
}
